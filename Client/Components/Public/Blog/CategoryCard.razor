<div class="card shadow mb-2">
    <img src="@($"{APIEndpoints.ServerBaseUrl}/{Category.ThumbnailImagePath}")" class="card-image-top" alt="Category Thumbnail Image" />
    <div class="card-body">
        <h3 class="class-title">@Category.Name</h3>
        <p class="card-text">@Category.Description</p>
    </div>
    <a href="/" class="btn btn-primary stretched-link">View Post</a>
</div>

@code 
{
 [Parameter] public Category Category { get; set; }
}